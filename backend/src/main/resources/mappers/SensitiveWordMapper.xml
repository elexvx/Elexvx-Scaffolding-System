<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.tdesign.mapper.SensitiveWordMapper">
  <sql id="BaseSelect">
    SELECT id,
      word,
      enabled,
      created_at,
      updated_at
    FROM sensitive_words
  </sql>

  <select id="selectAll" resultType="com.tencent.tdesign.entity.SensitiveWord">
    <include refid="BaseSelect" />
  </select>

  <select id="selectAllEnabled" resultType="com.tencent.tdesign.entity.SensitiveWord">
    <include refid="BaseSelect" />
    WHERE enabled = 1
  </select>

  <select id="selectPage" resultType="com.tencent.tdesign.entity.SensitiveWord">
    <include refid="BaseSelect" />
    <where>
      <if test="keyword != null and keyword != ''">
        AND LOWER(word) LIKE CONCAT(CONCAT('%', LOWER(#{keyword})), '%')
      </if>
    </where>
    ORDER BY updated_at DESC, id DESC
    <choose>
      <when test="_databaseId == 'oracle' or _databaseId == 'sqlserver'">
        OFFSET #{offset} ROWS FETCH NEXT #{limit} ROWS ONLY
      </when>
      <otherwise>
        LIMIT #{limit} OFFSET #{offset}
      </otherwise>
    </choose>
  </select>

  <select id="countByKeyword" resultType="long">
    SELECT COUNT(1)
    FROM sensitive_words
    <where>
      <if test="keyword != null and keyword != ''">
        AND LOWER(word) LIKE CONCAT(CONCAT('%', LOWER(#{keyword})), '%')
      </if>
    </where>
  </select>

  <select id="selectById" resultType="com.tencent.tdesign.entity.SensitiveWord">
    <include refid="BaseSelect" />
    WHERE id = #{id}
  </select>

  <select id="selectByWord" resultType="com.tencent.tdesign.entity.SensitiveWord">
    <include refid="BaseSelect" />
    WHERE word = #{word}
    <choose>
      <when test="_databaseId == 'sqlserver'">
        OFFSET 0 ROWS FETCH NEXT 1 ROWS ONLY
      </when>
      <when test="_databaseId == 'oracle'">
        FETCH FIRST 1 ROWS ONLY
      </when>
      <otherwise>
        LIMIT 1
      </otherwise>
    </choose>
  </select>

  <insert id="insert" parameterType="com.tencent.tdesign.entity.SensitiveWord" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO sensitive_words (
      word,
      enabled,
      created_at,
      updated_at
    )
    VALUES (
      #{word},
      #{enabled},
      #{createdAt},
      #{updatedAt}
    )
  </insert>

  <update id="update" parameterType="com.tencent.tdesign.entity.SensitiveWord">
    UPDATE sensitive_words
    SET
      word = #{word},
      enabled = #{enabled},
      updated_at = #{updatedAt}
    WHERE id = #{id}
  </update>

  <delete id="deleteById">
    DELETE FROM sensitive_words WHERE id = #{id}
  </delete>
</mapper>
