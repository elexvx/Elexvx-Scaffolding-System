<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.tdesign.mapper.UserDepartmentMapper">
  <select id="selectDepartmentIdsByUserId" resultType="long">
    SELECT department_id
    FROM user_departments
    WHERE user_id = #{userId}
  </select>

  <select id="selectDepartmentNamesByUserId" resultType="string">
    SELECT ou.name
    FROM org_units ou
    JOIN user_departments ud ON ud.department_id = ou.id
    WHERE ud.user_id = #{userId}
    ORDER BY ou.sort_order ASC, ou.id ASC
  </select>

  <delete id="deleteByUserId">
    DELETE FROM user_departments WHERE user_id = #{userId}
  </delete>

  <insert id="insertUserDepartments">
    INSERT INTO user_departments (user_id, department_id)
    VALUES
    <foreach collection="departmentIds" item="departmentId" separator=",">
      (#{userId}, #{departmentId})
    </foreach>
  </insert>
</mapper>
